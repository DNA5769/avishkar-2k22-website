{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "esModuleInterop": true,                             
    "module": "commonjs",
    "moduleResolution": "node",
    "incremental": true,
    "noImplicitAny": false,
    "lib": [ "es2015" ]
  },
  "inclue": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
